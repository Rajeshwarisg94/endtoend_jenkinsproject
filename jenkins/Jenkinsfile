pipeline {
    agent {
        label 'java_agent'
    }

parameters{
    [choice(choices: ['master', 'main', 'branch1', 'braanch2'], description: 'Select branch to build', name: 'branch ')])]
}

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean install'
            }
        }


    stage("SonarQube analysis") {
            steps {
              withSonarQubeEnv('Sonar') {
                sh 'mvn sonar:sonar'
            }
        }
    }

    stage('Test') {
        steps {
            sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}
