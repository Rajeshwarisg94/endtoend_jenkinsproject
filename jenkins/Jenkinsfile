pipeline {
    agent {
        label 'java_agent'
    }

    parameters {
        properties([parameters([choice(choices: ['master\nmain'], description: 'Choose branch', name: 'BRANCH')])])
    }
        
    stages {
        stage('Build') {
            steps {
                echo "BRANCH: ${params.BRANCH}"
                sh 'mvn -B -DskipTests clean install'
            }
        }
    }


        stage("SonarQube analysis") { 
            steps {
              withSonarQubeEnv('Sonar') {
                sh 'mvn sonar:sonar'
            }
        }
    }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
                post {
                    always {
                        junit 'target/surefire-reports/*.xml'
                }
            }
    }
}
